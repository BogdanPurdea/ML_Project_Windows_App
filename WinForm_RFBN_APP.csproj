<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net9.0-windows</TargetFramework>
		<Nullable>enable</Nullable>
		<UseWindowsForms>true</UseWindowsForms>
		<ImplicitUsings>enable</ImplicitUsings>
	</PropertyGroup>

	<ItemGroup>
    <PackageReference Include="Accord.Math" Version="3.8.0" />
    <PackageReference Include="Accord.Neuro" Version="3.8.0" />
    <PackageReference Include="MaterialSkin.2" Version="2.3.1" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" Version="9.0.11" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Tools" Version="9.0.11">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Pages\ManualTestingPage.cs">
      <SubType>UserControl</SubType>
    </Compile>
  </ItemGroup>
  
  <ItemGroup>
    <Compile Remove="ConsoleRunner\**" />
	<EmbeddedResource Remove="ConsoleRunner\**" />
    <None Remove="ConsoleRunner\**" />
  </ItemGroup>

	<ItemGroup>
		<None Update="DataSet\train_80k.csv">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>
		<None Update="DataSet\test_20k.csv">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>
	</ItemGroup>

	<Target Name="PostBuild" AfterTargets="PostBuildEvent">
		<Exec Command="copy &quot;$(ProjectDir)\DataSet\train_80k_normalized_data.csv&quot; &quot;$(TargetDir)train_80k_normalized_data.csv&quot; /Y" />
		<Exec Command="copy &quot;$(ProjectDir)\DataSet\test_20k_normalized_data.csv&quot; &quot;$(TargetDir)test_20k_normalized_data.csv&quot; /Y" />
		<Exec Command="copy &quot;$(ProjectDir)\DataSet\train_80k.csv&quot; &quot;$(TargetDir)train_80k.csv&quot; /Y" />
		<Exec Command="copy &quot;$(ProjectDir)\DataSet\test_20k.csv&quot; &quot;$(TargetDir)test_20k.csv&quot; /Y" />
	</Target>

</Project>